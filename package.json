{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --ignore-scripts",
    "tsc": "lerna exec npm run tsc",
    "link": "lerna run link",
    "eslint": "lerna exec npm run eslint",
    "test": "lerna exec npm run test -- -- --passWithNoTests",
    "setup:dev": "npm run bootstrap && npm run link && npm run tsc",
    "setup:prod": "npm install && lerna bootstrap --hoist && npm run tsc && npm run test && npm run eslint",
    "publish": "lerna publish --no-push"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lerna": "^3.22.1"
  }
}
